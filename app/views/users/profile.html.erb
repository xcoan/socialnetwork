<% if @thoughts.empty? %>
  <p>
    It looks like <%= @user.username %> hasn't submitted a thought yet ğŸ˜•
  </p>

<% else %>
  <% @thoughts.each do |f| %>
    <div class="thoughts">
      <p>
        <%= link_to User.find(f.user_id).username, controller: 'users', action: 'profile', username: User.find(f.user_id).username %>
      </p>
      <p id="idea">
        <%= f.idea %>
      </p>
      <p id="time">
        <%= f.updated_at.strftime("%l:%M%p %Z on %D") %>
      </p>
    </div>
   <% end %>
<% end %>
