<% if @thoughts.empty? %>
  <p>
    It looks like <%= @user.username %> hasn't submitted a thought yet ðŸ˜•
  </p>

<% else %>
  <table>
    <% @thoughts.each do |f| %>
       <tr>
         <td>
           <%= link_to User.find(f.user_id).username, controller: 'users', action: 'profile', username: User.find(f.user_id).username %>
       </tr>
       <tr>
         <td>
           <%= f.idea %>
         </td>
       </tr>
       <tr>
         <td>
           <%= f.updated_at.strftime("%l:%M%p %Z on %D") %>
         </td>
       </tr>
       <tr>
         <td>
           <hr />
         </td>
       </tr>
     <% end %>
  </table>
<% end %>
