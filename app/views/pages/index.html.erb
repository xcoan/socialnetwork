<div class="page_top">
  <h1>Welcome to The Neural Network</h1>

  <p>
    We noticed that you aren't logged in! Why don't you Signup or Sign in?
  </p>
  <br />
</div>

<div class="container-fluid">

  <div class="row">
    <div class="col-md-5" id="pane">
      <h2>Sign Up New User</h2>
      <hr />
      <%= form_for @user do |f| %>

        <p>
          <%= f.label :name %><br />
          <%= f.text_field :name, :autofocus => true %>
        </p>

        <p>
          <%= f.label :username %><br />
          <%= f.text_field :username %>
        </p>

        <p>
          <%= f.label :email %><br>
          <%= f.email_field :email %>
        </p>

        <p>
          <%= f.label :password %><br>
          <%= f.password_field :password %>
        </p>
        <p>
          <%= f.submit "Create", class: "userbutton" %>
        </p>
      <% end %>
    </div>

    <div class="col-md-2">

    </div>

    <div class="col-md-5" id="pane">
      <h2>Sign In</h2>
      <hr />
      <%= form_for(:session, url: login_path) do |f| %>
      <p>
        <%= f.label :email %><br />
        <%= f.email_field :email %>
      </p>
      <p>
        <%= f.label :password %><br />
        <%= f.password_field :password %><br />
      </p>
      <p>
        <%= f.submit "Log in", class: "userbutton" %>
      </p>
      <% end %>
    </div>
  </div>

</div>
